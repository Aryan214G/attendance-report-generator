<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.ui.ReportController">
    <children>

        <Label layoutX="400.0" layoutY="40.0" text="Attendance Report">
            <font>
                <Font size="24.0" />
            </font>
        </Label>


        <!-- Table inside scroll pane -->
        <ScrollPane layoutX="50" layoutY="80" prefHeight="500" prefWidth="900">
            <content>
                <TableView fx:id="reportTable" prefHeight="500" prefWidth="900">
                    <columns>
                        <TableColumn fx:id="employeeNameCol" prefWidth="150" text="Employee Name" />
                        <TableColumn fx:id="hoursWorkedCol" prefWidth="100" text="Hours Worked" />
                        <TableColumn fx:id="hoursAddedCol" prefWidth="100" text="Hours Added" />
                        <TableColumn fx:id="totalHoursCol" prefWidth="100" text="Total Hours" />
                        <TableColumn fx:id="daysWorkedCol" prefWidth="100" text="Days Worked" />
                        <TableColumn fx:id="workingDaysCol" prefWidth="100" text="Working Days" />
                        <TableColumn fx:id="overtimeCol" prefWidth="100" text="Overtime" />
                        <TableColumn fx:id="singleCheckInsCol" prefWidth="150" text="Single Check-ins" />
                    </columns>
                </TableView>
            </content>
        </ScrollPane>

        <!-- Buttons -->
        <HBox layoutX="50" layoutY="600" spacing="20">
            <children>
                <Button fx:id="addHoursBtn" onAction="#handleAddHours" prefWidth="120" text="Add Hours" />
                <Button fx:id="saveBtn" onAction="#handleSaveReport" prefWidth="120" text="Save Report" />
                <Button fx:id="finishBtn" onAction="#switchToHomeScene" prefWidth="120" text="Finish" />
            </children>
        </HBox>
      <Button layoutX="909.0" layoutY="45.0" mnemonicParsing="false" onAction="#onPrintReport" text="Print" />

    </children>
</AnchorPane>
