<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.attendance.ui.ReportController">
    <children>

        <Label layoutX="250.0" layoutY="26.0" styleClass="heading" text="Attendance Report" AnchorPane.topAnchor="26.0">
            <font>
                <Font size="36.0" />
            </font>
        </Label>


        <!-- Table inside scroll pane -->
        <ScrollPane layoutX="34.0" layoutY="80" prefHeight="500" prefWidth="730.0" AnchorPane.bottomAnchor="140.0" AnchorPane.leftAnchor="34.0" AnchorPane.rightAnchor="36.0" AnchorPane.topAnchor="80.0">
            <content>
                <TableView fx:id="reportTable" prefHeight="500" prefWidth="730.0">
                    <columns>
                        <TableColumn fx:id="employeeNameCol" prefWidth="150" text="Employee Name" />
                        <TableColumn fx:id="hoursWorkedCol" prefWidth="100" text="Hours Worked" />
                        <TableColumn fx:id="hoursAddedCol" prefWidth="100" text="Hours Added" />
                        <TableColumn fx:id="totalHoursCol" prefWidth="100" text="Total Hours" />
                        <TableColumn fx:id="daysWorkedCol" prefWidth="100" text="Days Worked" />
                        <TableColumn fx:id="workingDaysCol" prefWidth="100" text="Working Days" />
                        <TableColumn fx:id="overtimeCol" prefWidth="100" text="Overtime" />
                        <TableColumn fx:id="singleCheckInsCol" prefWidth="150" text="Single Check-ins" />
                    </columns>
                </TableView>
            </content>
        </ScrollPane>

        <!-- Buttons -->
        <HBox layoutX="50" layoutY="600" spacing="20" AnchorPane.bottomAnchor="94.66666666666667" AnchorPane.leftAnchor="50.0">
            <children>
                <Button fx:id="addHoursBtn" onAction="#handleAddHours" prefWidth="120" text="Add Hours" />
            <Button fx:id="addHoursForAll" mnemonicParsing="false" onAction="#handleAddHoursForAll" text="Add hours for all" />
                <Button fx:id="saveBtn" onAction="#handleSaveReport" prefWidth="120" text="Save Report" />
                <Button fx:id="finishBtn" onAction="#switchToHomeScene" prefWidth="120" text="Finish" />
            </children>
        </HBox>
      <Button layoutX="800.0" layoutY="45.0" mnemonicParsing="false" onAction="#onPrintReport" text="Print" AnchorPane.rightAnchor="35.0" />

    </children>
</AnchorPane>
